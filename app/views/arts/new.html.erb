<% provide(:title, 'Nowy wpis') %>

<h1>Dodaj nowy wpis</h1>

<div class="container-fluid">
	<div class="col-md-6">
	
		<%= form_for(@art) do |f| %>		

		<div class="form-group col-lg-12">
			<label>Tytuł</label>
			<%= f.text_field :title, class: 'form-control'%>
		</div>

		<div class="form-group col-lg-12">
			<label>Autor</label>
			<%= f.text_field :author, class: 'form-control'%>
		</div>

		<div class="col-lg-12">
			<label>Zdjęcie</label>
			<%= f.file_field :image %>
		</div>

		<div class="form-group col-lg-12">
			<%= f.submit "Dodaj wpis", class: "btn btn-primary" %>
		</div>

		

		<% end %>
	</div>
