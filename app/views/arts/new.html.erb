<% provide(:title, 'Nowy wpis') %>

<h1>Dodaj nowy wpis</h1>

<div class="container-fluid">
	<div class="col-md-6">
	
		<%= form_for(@art) do |f| %>		

		<div class="form-group col-lg-12">
			<label>Tytuł</label>
			<%= f.text_field :title, class: 'form-control'%>
		
			<label>Autor</label>
			<%= f.text_field :author, class: 'form-control'%>
		
			<label>Rok</label>
			<%= f.number_field :year, class: 'form-control'%>
		
			<label>Technika</label>
			<%= f.text_field :technique, class: 'form-control'%>
		
			<label>Cena (pozostaw puste jeśli nie na sprzedaż)</label>
			<%= f.number_field :price, class: 'form-control'%>
		
			<label>Dostępność:</label>
			<%= f.check_box :availability %>
			<br>

			<label>Zdjęcie</label>
			<%= f.file_field :image %>
			<br>

			<%= f.submit "Dodaj wpis", class: "btn btn-primary" %>
		</div>

		<% end %>
	</div>
</div>
