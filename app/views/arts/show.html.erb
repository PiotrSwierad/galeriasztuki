<% provide(:title, 'Wpis') %>



<div class="col-12 col-md-8 text-center">
		<%= link_to @art.image, data: {fancybox: ''} do %>
			<%= image_tag @art.image.variant(resize: "x700"), style: "max-width: 100%; max-height: 75vh;", class: "img-thumbnail" %>
		<% end %>
</div>

<div class="col-6 col-md-4">
	<div>
			<%= link_to 'Powrót', arts_path, class: "btn btn-primary"%>

		<%if !isAdmin? %>
			<%= link_to 'Zapytaj o dostępność', root_path, class: "btn btn-success"%>
		<% end %>

		<% if isAdmin? %>
			<%= link_to 'Edytuj', edit_art_path(@art), class: "btn btn-warning" %>
			<%= link_to 'Usuń', @art, method: :delete, data: { confirm: 'Czy na pewno chcesz usunąć wpis?'}, class: "btn btn-danger" %>
		<% end %>
	</div>
	<br>
	<div>
		<h2><%= @art.title %></h2><br>
		<h4><%= @art.author %></h4><br>

		<strong>Rok: </strong><%= @art.year %><br>
		<strong>Technika: </strong><%= @art.technique %><br>
		<% if @art.availability %>
		<strong>Cena: </strong><%= @art.price %><br>
		<% end %>
	</div>
	
</div>